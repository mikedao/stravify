@import "bootstrap-sprockets";
@import "bootstrap";


/* universal */
html, body {
  height: 100%;
}
body {
  padding-top: 60px;
  background: url('<%= asset_path("cobbles.jpg")%>')no-repeat center center fixed;
  background-size: cover;
}



/* header stuff */
#logo {
  float: left;
  margin-right: 10px;
  font-size: 1.7em;
  color: #fff;
  text-transform: uppercase;
  letter-spacing: -1px;
  padding-top: 9px;
  font-weight: bold;
}

.navbar {
  background-color: #D23200;
}
/* front page text */
.front-page-text {
  color: #fff;
  background-color:rgba(0,0,0,0.8);
  margin-top: 50px;
  min-height: 400px;
  border-radius: 10px;
}

.log-in, .sign-up {
  color: #fff;
  background-color:rgba(0,0,0,0.8);
  margin-top: 50px;
  border-radius: 10px;
}

// username login
#usernameform {
  padding: 10px 10px 0px 10px;
}

#passwordform {
  padding: 0px 10px 10px 10px;
}

.strava-button {
  margin: 20px;
}

// User page data

.bike-data {
  margin-top: 40px;
  background-color: white;
}


.user-box {
  background-color: #ffffff;
  max-height: 600px;
  margin-top: 40px;

}

