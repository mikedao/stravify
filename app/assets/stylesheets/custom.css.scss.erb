@import "bootstrap-sprockets";
@import "bootstrap";


/* universal */
html, body {
  height: 100%;
}
body {
  padding-top: 60px;
  background: url('<%= asset_path("cobbles.jpg")%>')no-repeat center center fixed;
  background-size: cover;
  background-color: black;
}



/* header stuff */
#logo {
  float: left;
  margin-right: 10px;
  font-size: 1.7em;
  color: #fff;
  text-transform: uppercase;
  letter-spacing: -1px;
  padding-top: 9px;
  font-weight: bold;
  text-shadow: 2px 2px 3px black;
}

.logout a {
  float: right;
  margin-right: 10px;
  font-size: 1.2em;
  color: white;
  padding-top: 13px;
  text-decoration: none;

}

.navbar {
  background-color: #FB3300;
}
/* front page text */
.front-page-text {
  color: #fff;
  background-color:rgba(0,0,0,0.8);
  margin-top: 50px;
  min-height: 400px;
  border-radius: 10px;
}

span.welcome-text h1 {
  font-size: 60px;
  text-align: center;
}

.log-in, .sign-up {
  color: #fff;
  background-color:rgba(0,0,0,0.8);
  margin-top: 50px;
  border-radius: 10px;
}

// username login
#usernameform {
  padding: 10px 10px 0px 10px;
}

#passwordform {
  padding: 0px 10px 10px 10px;
}

.strava-button {
  margin: 20px;
}

// User page data


.bike-chart {
  margin-top: 40px;
  padding: 20px;
  color: black;
  background-color: white;
  border-radius: 10px;
}

.bike-data {
  margin-top: 20px;
  padding: 20px;
  margin-left: auto;
  margin-right: auto;
}
.bike_label {
  margin-top: 20px;
}
.bikedata {
  margin-left: auto;
  margin-right: auto;
}
.focus {
  margin-top: 20px;
  padding: 20px;
  background-color: white;
  border-radius: 10px;
}

.sad-scott {
  margin-bottom: 15px;
}
.focus-data {
  padding: 20px;
  margin-left: 60px;
  margin-right: 60px;
}
.focus-label {
  font-weight: bold;
}
.activity-data {
  background-color: white;
  margin-top: 20px;
  border-radius: 10px;
}

.club-part {
  margin-top: 20px;
}

.user-part {
  margin-bottom: 40px;
}

.indiv-club {
  margin-top: 20px;
}

.club-name {
  margin-bottom: 20px;
}

.user-box {
  background-color: #ffffff;
  margin-top: 20px;
  border-radius: 20px;
}

.ftp-part {
  color: #FB3300;
  font-size: 72px;
  font-weight: 900;
  text-shadow: 2px 2px 2px black;
}

// footer stuff

.footer {
  background-color: black;
  min-height: 75px;
  margin-top: 45px;
  padding: 15px;
  color: white;
}

.footer a {
  text-decoration: none;
}
.footer ul {
  float: right;
  list-style: none;
}
.footer ul li {
  float: left;
  margin-left: 15px;
}

small.credits {
  padding-top: 5px;
}
